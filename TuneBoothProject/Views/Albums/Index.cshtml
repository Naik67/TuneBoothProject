@model TuneBooth.Models.ModelsVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Album.Titre)
        </th>
        <th>
            Artiste
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Album.DateSortie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Album.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Album.Prix)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Albums) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titre)
        </td>
        <td>
            <a href="~/Artistes/Details/@item.ArtisteID">@Model.Artistes.Find(x => x.ID == item.ArtisteID).NomArtiste</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateSortie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
