@model TuneBooth.Models.ModelsVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p> avant </p>
<p>
    @ViewBag.Message
</p>
<p> après </p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tune.Titre)
        </th>
        <th>
            Artiste
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tune.Prix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tune.DateSortie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tune.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tune.Format)
        </th>
        <th>
            Album
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Tunes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titre)
        </td>
        <td>
            <a href="~/Artistes/Details/@item.ArtisteID">@Model.Artistes.Find(x => x.ID == item.ArtisteID).NomArtiste</a>
</td>
        <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateSortie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Format)
        </td>
        <td>
            <a href="~/Albums/Details/@item.AlbumID">@Model.Albums.Find(x => x.ID == item.AlbumID).Titre</a>
</td>
        <td>
                 |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
